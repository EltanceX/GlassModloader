<Screen xmlns="runtime-namespace:Game">

  <PanoramaWidget />

  <StackPanelWidget Direction="Horizontal">

    <CanvasWidget Style="{Widgets/TopBarContents}" >
      <LabelWidget Name="TopBar.Label" Text="调整音频设置" />
    </CanvasWidget>

    <CanvasWidget Margin="10, 20">
      <BevelledRectangleWidget Style="{Styles/Area}" />
      <ScrollPanelWidget Direction="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="3, 3">
        <StackPanelWidget Direction="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">

          <UniformSpacingPanelWidget Direction="Horizontal" Margin="0, 3">
            <LabelWidget Text="声音音量:" Font="{Fonts/Pericles18}" HorizontalAlignment="Far" VerticalAlignment="Center" Margin="20, 0" />
            <SliderWidget Name="SoundsVolumeSlider" Size="Infinity, 60" VerticalAlignment="Center" Margin="20, 0" />
          </UniformSpacingPanelWidget>

          <UniformSpacingPanelWidget Direction="Horizontal" Margin="0, 3">
            <LabelWidget Text="音乐音量:" Font="{Fonts/Pericles18}" HorizontalAlignment="Far" VerticalAlignment="Center" Margin="20, 0" />
            <SliderWidget Name="MusicVolumeSlider" Size="Infinity, 60" VerticalAlignment="Center" Margin="20, 0" />
          </UniformSpacingPanelWidget>

        </StackPanelWidget>
      </ScrollPanelWidget>
    </CanvasWidget>

  </StackPanelWidget>

</Screen>