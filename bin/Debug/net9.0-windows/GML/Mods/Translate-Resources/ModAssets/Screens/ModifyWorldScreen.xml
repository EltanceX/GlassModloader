<Screen xmlns="runtime-namespace:Game">

  <PanoramaWidget />

  <StackPanelWidget Direction="Horizontal">

    <CanvasWidget Style="{Widgets/TopBarContents}" >
      <LabelWidget Name="TopBar.Label" Text="修改世界" />
    </CanvasWidget>

    <StackPanelWidget Direction="Vertical" HorizontalAlignment="Center" VerticalAlignment="Near" Margin="10, 10">

      <UniformSpacingPanelWidget Direction="Horizontal" VerticalAlignment="Center">
        <LabelWidget HorizontalAlignment="Far" VerticalAlignment="Center" Font="{Fonts/Pericles18}" Text="重命名世界:" Margin="10, 0"/>
        <CanvasWidget VerticalAlignment="Center" Size="Infinity, 50" Margin="9, 5" >
          <BevelledRectangleWidget Style="{Styles/TextBoxArea}" />
          <TextBoxWidget Name="Name" Title="Rename World" Size="320, 50" VerticalAlignment="Center" Font="{Fonts/Pericles24}" MaximumLength="14" Margin="10, 0" />
        </CanvasWidget>
      </UniformSpacingPanelWidget>

      <UniformSpacingPanelWidget Direction="Horizontal" VerticalAlignment="Center">
        <LabelWidget HorizontalAlignment="Far" VerticalAlignment="Center" Font="{Fonts/Pericles18}" Text="世界种子:" Margin="10, 0" />
        <CanvasWidget VerticalAlignment="Center" Size="Infinity, 50" Margin="9, 5">
          <BevelledRectangleWidget Style="{Styles/Area}" />
          <LabelWidget Name="Seed" VerticalAlignment="Center" Font="{Fonts/Pericles24}" Margin="10, 0" Color="128, 128, 128" />
        </CanvasWidget>
      </UniformSpacingPanelWidget>

      <UniformSpacingPanelWidget Direction="Horizontal" VerticalAlignment="Center">
        <LabelWidget HorizontalAlignment="Far" VerticalAlignment="Center" Font="{Fonts/Pericles18}" Text="游戏模式:" Margin="10, 0" />
        <BevelledButtonWidget Name="GameMode" Style="{Styles/ButtonStyle_310x60}" VerticalAlignment="Center" Margin="5, 0" />
      </UniformSpacingPanelWidget>

      <UniformSpacingPanelWidget Direction="Horizontal" VerticalAlignment="Center">
        <LabelWidget HorizontalAlignment="Far" VerticalAlignment="Center" Font="{Fonts/Pericles18}" Text="更改世界选项:" Margin="10, 0" />
        <BevelledButtonWidget Name="WorldOptions" Style="{Styles/ButtonStyle_310x60}" Text="选项..." VerticalAlignment="Center" Margin="5, 0" />
      </UniformSpacingPanelWidget>

      <CanvasWidget Size="0, Infinity"/>

      <CanvasWidget HorizontalAlignment="Center">
        <LabelWidget Name="Error" HorizontalAlignment="Center" VerticalAlignment="Center" Text="世界名称无效" Font="{Fonts/Pericles18}" Color="255, 0, 0"/>
        <LabelWidget Name="Description" HorizontalAlignment="Center" VerticalAlignment="Center" TextAnchor="HorizontalCenter, VerticalCenter" Font="{Fonts/Pericles18}" Color="128, 128, 128" WordWrap="true" Margin="10, 0" />
      </CanvasWidget>

      <CanvasWidget Size="0, Infinity"/>

      <StackPanelWidget HorizontalAlignment="Center" VerticalAlignment="Far">
        <BevelledButtonWidget Name="Delete" Style="{Styles/ButtonStyle_160x60}" Text="删除" Margin="6, 0"/>
        <BevelledButtonWidget Name="Upload" Style="{Styles/ButtonStyle_160x60}" Text="上传" Margin="6, 0"/>
        <CanvasWidget Size="Infinity, 0"/>
        <BevelledButtonWidget Name="Apply" Style="{Styles/ButtonStyle_310x60}" Text="应用更改" Margin="6, 0"/>
      </StackPanelWidget>

    </StackPanelWidget>

  </StackPanelWidget>

</Screen>